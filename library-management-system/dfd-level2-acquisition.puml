@startuml Level 2 DFD - Acquisition (Process 3.0)

skinparam maxwidth 1600
skinparam maxheight 1100
skinparam dpi 300
scale max 1600x1100

title Level 2 Data Flow Diagram - Acquisition (Process 3.0)

rectangle "Staff" as Staff
rectangle "Supplier" as Supplier

rectangle "D2\nResources" as D2
rectangle "D4\nOrders" as D4
 
rectangle "3.1\nIdentify Resource" as P31
rectangle "3.2\nCreate Acquisition List" as P32
rectangle "3.3\nValidate" as P33
rectangle "3.4\nOrder Resource" as P34
rectangle "3.5\nReceive Resource" as P35

Staff --> P31 : Resource details (publisher, bookshop, author, e-books)
P31 --> Staff : Resource identification
P31 --> P32 : Identified resource
P31 --> D2 : read

P32 --> Staff : Acquisition list
P32 --> P33 : Resource list
P32 --> D4 : write

Staff --> P33 : Budget, priorities
P33 --> Staff : Validation result
P33 --> P34 : Validated list
P33 --> D4 : read/write

P34 --> Supplier : Order
Supplier --> P34 : Order acknowledgment
P34 --> Staff : Order status
P34 --> D4 : read/write

Supplier --> P35 : Delivery
P35 --> Staff : Reception confirmation
P35 --> P32 : Completion notice
P35 --> D2 : write
P35 --> D4 : read/write

@enduml
